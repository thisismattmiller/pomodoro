<body>

  <p>File has been uploaded, waiting for it to be processed.</p>
  
  <div id="status"></div>

  <script>
    document.getElementById('status').innerHTML = 'Checking...'

    window.setInterval(()=>{
      document.getElementById('status').innerHTML = 'Checking...'


      fetch('/meta/<%=id%>').then(function(response) {
        if (response.status == 200){

          document.getElementById('status').innerHTML = 'Processing finished.'
          window.location="/work/<%=id%>"

        }else{
              document.getElementById('status').innerHTML = 'Not found yet...'

        }
      });
    }, 5000)    




  </script>


